        // script for saying hi
        function sayHi() {

            // use fetch api later on or NOT https://gomakethings.com/why-i-still-use-xhr-instead-of-the-fetch-api/
            let XHR = new XMLHttpRequest();

            // Bind the FormData object and the form element
            let FD = new FormData(contactform);

            console.log('the form', FD)

            // Define what happens on successful data submission
            XHR.addEventListener("load", function(event) {
                // alert(event.target.responseText);
                // console.log(event.target.responseText);

                if (event.target.responseText == 'OK') {
                    document.getElementById('sub').innerHTML = 'Thanks, We got your message';
                    document.getElementById("contactform").reset();
                    // tell them to send another message again
                    setTimeout(function() {
                        document.getElementById('sub').innerHTML = "Send Another Message";
                    }, 4000);
                } else {
                    document.getElementById('sub').innerHTML = 'Didn\'t get that. Our fault :(';
                    // tell them to send another message again
                    setTimeout(function() {
                        document.getElementById('sub').innerHTML = "Send Another Message";
                    }, 4000);
                }
                // say thank you

            });

            // Define what happens in case of error
            XHR.addEventListener("error", function(event) {
                // alert('Oops! Something went wrong.');
                document.getElementById('sub').innerHTML = 'Oops! Something went wrong.';
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Try again.";
                }, 4000);
            });

            // Set up our request
            XHR.open('POST', '/contact', true); // true makes it async request

            // Add the required HTTP header for form data POST requests
            XHR.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');

            // The data sent is what the user provided in the form
            console.log(FD)
            XHR.send(FD);
        }

        // Access the form element...
        let contactform = document.getElementById("contactform");

        // ...and take over its submit event.
        contactform.addEventListener("submit", function(event) {
            event.preventDefault(); // the default behaviour is refreshing the page and adding search params to the url

            // sayHi();

            fetch('/contact', {
                method: 'POST',
                body: new FormData(contactform)
            })
            .then(response => {
                // The API call was successful!
                if (response.ok) {
                    console.log(response);
                    return true // response.json();
                } else {
                    return Promise.reject(response);
                }
            })
            .then(result => {
                document.getElementById('sub').innerHTML = 'Thanks, We got your message';
                document.getElementById("contactform").reset();
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Send Another Message";
                }, 4000);
                // console.log('Success:', result);
            })
            .catch(error => {
                document.getElementById('sub').innerHTML = 'Didn\'t get that. Our fault :(';
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Send Another Message";
                }, 4000);
                // console.error('Error:', error);
            });
        }); // https://developer.mozilla.org/en-US/docs/Web/Events/submit
