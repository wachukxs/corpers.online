    <script>
        // Access the form element...
        let contactform = document.getElementById("contactform");

        // ...and take over its submit event.
        contactform.addEventListener("submit", function(event) {
            event.preventDefault(); // the default behaviour is refreshing the page and adding search params to the url
            // send the message
            fetch('/contact', {
                method: 'POST',
                body: new FormData(contactform)
            })
            .then(response => {
                // The API call was successful!
                if (response.ok) {
                    // console.log(response);
                    return true // response.json();
                } else {
                    return Promise.reject(response);
                }
            })
            .then(result => {
                document.getElementById('sub').innerHTML = 'Thanks, We got your message';
                document.getElementById("contactform").reset();
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Send Another Message";
                }, 4000);
            })
            .catch(error => {
                document.getElementById('sub').innerHTML = 'Didn\'t get that. Our fault :(';
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Send Message";
                }, 4000);
                // console.error('Error:', error);
            });
        }); // https://developer.mozilla.org/en-US/docs/Web/Events/submit
    </script>


