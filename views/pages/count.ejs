    <script>
      var socket = io( '/count', {
            transports: [ 'websocket' ]
        } );
    socket.on( 'count', function( data ) {
            console.log( 'got corpers count', data );
            // (data.count == 1 ? '' : 's') adds 's' to 'corpers' if there are more than one corpers online.
            if (data.number == 1) {
              document.getElementById( 'i' ).innerHTML = 'corper online' ;
            } else {
              document.getElementById( 'i' ).innerHTML = 'corpers online' ;
            }
            document.getElementById( '78' ).innerHTML = data.number ;
        } );
    </script>
