    <script>
        // Access the form element...
        let careersform = document.getElementById("careersform");

        // ...and take over its submit event.
        careersform.addEventListener("submit", function(event) {
            event.preventDefault(); // the default behaviour is refreshing the page and adding search params to the url
            
            let _form = new FormData(careersform);
            _form.append('position', 'Growth Strategist')
            // send the message
            fetch('/careers', {
                method: 'POST',
                body: _form
            })
            .then(response => {
                // The API call was successful!
                if (response.ok) {
                    // console.log(response);
                    return true // response.json();
                } else {
                    return Promise.reject(response);
                }
            })
            .then(result => {
                document.getElementById('sub').innerHTML = 'Thanks, we got your application';
                document.getElementById("careersform").reset();
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Submit";
                }, 4000);
            })
            .catch(error => {
                document.getElementById('sub').innerHTML = 'Didn\'t get that. Our fault :(, try again.';
                // tell them to send another message again
                setTimeout(function() {
                    document.getElementById('sub').innerHTML = "Submit";
                }, 7000);
                // console.error('Error:', error);
            });
        }); // https://developer.mozilla.org/en-US/docs/Web/Events/submit
    </script>


