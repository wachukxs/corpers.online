                $('#whatisspa').tooltip({ html: true });
              </script>
            <br>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="wantspaornot" id="inlineRadio1" value="yes">
              <label class="form-check-label" for="inlineRadio1">Yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="wantspaornot" id="inlineRadio2" value="no">
              <label class="form-check-label" for="inlineRadio2">No</label>
            </div>
          </div>
          
          <input type="submit" class="btn btn-default" value="Submit">
          
